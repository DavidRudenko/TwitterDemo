<Window x:Class="TwitterDemo.Code.TwitterLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ignore="http://www.galasoft.ch/ignore"
        Width="400" Height="200"  ResizeMode="NoResize"
        mc:Ignorable="d ignore">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock FontSize="18" FontWeight="Bold" Text="Enter Pincode: "></TextBlock>
                <TextBox  Margin="10,0,0,0" Name="PinBox" FontSize="18" FontWeight="Bold" MinWidth="100" ></TextBox>
            </StackPanel>
            <Button Name="SubmitPincode" FontSize="18" FontWeight="Bold" Margin="0,10,0,0" HorizontalAlignment="Center"  Click="SubmitPincode_Button_OnClick" >Submit pincode</Button>
        </StackPanel>
    </Grid>
</Window>
